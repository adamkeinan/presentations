    config.title = 'Your First Portfolio';
    config.description = 'Build a Portfolio With Gatsby + Markdown or Sanity.io';

    config.author = {
      name: 'Jason Lengstorf',
      email: 'jason@gatsbyjs.com',
      link: 'https://lengstorf.com/',
      twitter: 'jlengstorf',
      github: 'jlengstorf',
